<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.allan.musicapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.allan.MusicLibrary"
            android:label="Playlist">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.allan.AlbumsActivity"
            android:label="Albums" />
        <activity
            android:name="com.example.allan.TracksActivity"
            android:label="Tracks" />
        <activity
            android:name="com.example.allan.ArtistsActivity"
            android:label="Artists" />
        <activity
            android:name="com.example.allan.PaymentActivity"
            android:label="Payment" />
        <activity android:name="com.example.allan.NowPlayingActivity"
            android:label="Now Playing"></activity>
    </application>

</manifest>